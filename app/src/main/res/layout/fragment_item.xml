<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="10dp"
    android:elevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">


        <TextView
            android:id="@+id/text_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:textSize="18sp"
            android:maxLength="20"
            tools:text="Public Project Name" />

        <TextView
            android:id="@+id/text_http_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_project_name"
            android:layout_below="@+id/text_project_name"
            android:padding="4dp"
            android:autoLink="web"
            android:fontFamily="sans-serif-light"
            tools:text="http://www.github.com/" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/text_http_url"
            android:layout_below="@+id/text_http_url"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginBottom="5dp"
            android:padding="4dp"
            android:textSize="15sp"
            tools:text="2" />

        <TextView
            android:id="@+id/text_watcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_project_name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:padding="4dp"
            android:textSize="15sp"
            tools:text="watcher:01" />

        <TextView
            android:id="@+id/text_issues_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_size"
            android:layout_alignBottom="@+id/text_size"
            android:layout_alignEnd="@+id/text_watcher"
            android:padding="4dp"
            android:textSize="15sp"
            tools:text="issues:10" />
    </RelativeLayout>


</android.support.v7.widget.CardView>
